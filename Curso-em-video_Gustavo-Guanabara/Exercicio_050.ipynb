   "source": [
    "# Exercício 050 - Soma dos pares\n",
    "\n",
    "soma = 0\n",
    "\n",
    "for c in range(1, 7):\n",
    "    x= int(input('Digite um número: '))\n",
    "    if x % 2 == 0:\n",
    "        soma += x\n",
    "        print(f'{c}º:{x}')\n",
    "    else:\n",
    "        print(f'{c}º:{x}')\n",
    "\n",
    "print(f'\\nA soma dos pares em dentro dos {c} valores digitados deu {soma}')\n"
   ]
  }
